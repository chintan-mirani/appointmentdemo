{% block sidebar %}
    {% set currentPath = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}

	<!-- Main Sidebar Container -->
	<aside
		class="main-sidebar sidebar-dark-primary elevation-4">
		<!-- Brand Logo -->

		<a href="{{ path('users') }}" class="brand-link">
			<img src="{{asset('dist/img/AdminLTELogo.png')}}" alt="Tourisum Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
			<span class="brand-text font-weight-light">Appointment</span>
		</a>

		<!-- Sidebar -->
		<div
			class="sidebar">


			<!-- Sidebar Menu -->
			<nav class="mt-3">
				<ul
					class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
					<!-- Add icons to the links using the .nav-icon class
                    with font-awesome or any other icon font library -->
					<li class="nav-item">
						<a href="{{ path('users') }}" class="nav-link {% if '/users' in currentPath or '/user' in currentPath %} bg bg-primary {% endif %}">
							<i class="nav-icon fa fa-users" aria-hidden="true"></i>
							<p>Users</p>
						</a>
					</li>
					<li class="nav-item">
						<a href="{{ path('appointment')}}" class="nav-link {% if '/appointment' in currentPath or '/appointments' in currentPath %} bg bg-primary {% endif %}">
							<i class="nav-icon fa fa-tasks" aria-hidden="true"></i>
							<p> Appointments </p>
						</a>
					</li>

				</ul>
			</nav>
			<!-- /.sidebar-menu -->
		</div>
		<!-- /.sidebar -->
	</aside>
{% endblock %}
