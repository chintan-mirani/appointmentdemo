{% extends "base.html.twig" %}
{% block content %}
	
		<!-- Content Header (Page header) -->
	 <section class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1>Update user</h1>
					</div>
					<div class="col-sm-6">
						<ol class="breadcrumb float-sm-right">
							<li
								class="breadcrumb-item">{# <a href="">Home</a> #}
							</li>
						</ol>
					</div>
				</div>
			</div>
			
		</section>
    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-6">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Update user</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              {{ form_start(form, {'attr': {'novalidate':'novalidate'}})}}
                <div class="card-body">
                  <div class="form-group">
                  {{ form_label(form.firstName, 'First name')}} <span class="text-danger">*</span>
                  {{ form_widget(form.firstName, {'attr':{'class': 'form-control'}})}}
                  <span class="text-danger">{{ form_errors(form.firstName, {'attr':{'class': 'p-0 m-0'}}) }}</span>
                  </div>
                  <div class="form-group">
                    {{form_label(form.lastName, 'Last name')}} <span class="text-danger">*</span>
                    {{ form_widget(form.lastName, {'attr':{'class': 'form-control'}})}}
                    <span class="text-danger"> {{ form_errors(form.lastName) }}</span>
                  </div>
                  <div class="form-group">
                    {{form_label(form.email, 'Email')}} <span class="text-danger">*</span>
                    {{ form_widget(form.email, {'attr':{'class': 'form-control'}})}}
                    <span class="text-danger">{{ form_errors(form.email) }}</span>
                  </div>                
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Save</button>
                  <a href="{{ path('users') }}" class="btn btn-primary ">Cancel</a>
                </div>
              {{ form_end(form) }}
            </div>
            <!-- /.card -->
             </div>
          <!--/.col (right) -->
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
{% endblock %}